@model CategoryDeleteViewModel
@{
    ViewData["Title"] = "Xóa danh mục";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-trash me-2"></i>Xóa danh mục
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Cảnh báo:</strong> @Model.DeleteWarning
                    </div>

                    <!-- Category Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="card-title mb-0">Thông tin danh mục</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>ID:</strong> @Model.Id</p>
                                    <p><strong>Tên danh mục:</strong> @Model.Name</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Số sách:</strong> 
                                        <span class="badge bg-info">@Model.BookCount sách</span>
                                    </p>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="row">
                                    <div class="col-12">
                                        <p><strong>Mô tả:</strong></p>
                                        <p class="text-muted">@Model.Description</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!Model.CanDelete)
                    {
                        <!-- Cannot Delete - Show Information -->
                        <div class="alert alert-danger">
                            <i class="fas fa-ban me-2"></i>
                            <strong>Không thể xóa danh mục này!</strong>
                            <p class="mb-0 mt-2">
                                Danh mục này đang được sử dụng bởi <strong>@Model.BookCount sách</strong>. 
                                Bạn cần xóa hoặc chuyển những sách này sang danh mục khác trước khi có thể xóa danh mục này.
                            </p>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                            </a>
                            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                                <i class="fas fa-edit me-2"></i>Chỉnh sửa danh mục
                            </a>
                        </div>
                    }
                    else
                    {
                        <!-- Can Delete - Show Confirmation -->
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Xác nhận xóa:</strong>
                            <p class="mb-0 mt-2">
                                Danh mục này không được sử dụng bởi sách nào và có thể được xóa an toàn.
                                Thao tác này không thể hoàn tác.
                            </p>
                        </div>

                        <form asp-action="Delete" method="post" id="deleteForm">
                            @Html.AntiForgeryToken()
                            <input asp-for="Id" type="hidden" />
                            
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Hủy
                                </a>
                                <div>
                                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-primary me-2">
                                        <i class="fas fa-edit me-2"></i>Chỉnh sửa thay vì xóa
                                    </a>
                                    <button type="submit" class="btn btn-danger" id="deleteBtn">
                                        <i class="fas fa-trash me-2"></i>Xác nhận xóa
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>

            <!-- Additional Information Card -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin bổ sung
                    </h6>
                </div>
                <div class="card-body">
                    <h6>Tại sao không thể xóa danh mục có sách?</h6>
                    <ul class="mb-3">
                        <li>Đảm bảo tính nhất quán dữ liệu trong hệ thống</li>
                        <li>Tránh làm mất thông tin phân loại của sách</li>
                        <li>Bảo vệ dữ liệu khỏi việc xóa nhầm</li>
                    </ul>

                    <h6>Cách xử lý khi muốn xóa danh mục có sách:</h6>
                    <ol class="mb-0">
                        <li>Tạo danh mục mới (nếu cần)</li>
                        <li>Chuyển tất cả sách sang danh mục khác</li>
                        <li>Quay lại xóa danh mục này</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#deleteForm').on('submit', function(e) {
            if (!confirm('Bạn có CHẮC CHẮN muốn xóa danh mục "@Model.Name"? Thao tác này không thể hoàn tác!')) {
                e.preventDefault();
                return false;
            }

            // Disable submit button to prevent double submission
            $('#deleteBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang xóa...');
        });

        // Auto-focus on the appropriate button
        $(document).ready(function() {
            @if (Model.CanDelete)
            {
                <text>
                // Focus on cancel button for safety
                $('a[href*="Index"]').focus();
                </text>
            }
            else
            {
                <text>
                // Focus on back button
                $('a[href*="Index"]').focus();
                </text>
            }
        });
    </script>
}