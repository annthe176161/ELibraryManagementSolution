<!-- Contact Section - Liên hệ với phong cách Việt Nam -->
<section id="contact" class="contact">
    <div class="content-wrapper">
        <div class="section-header">
            <h2>📞 Kết Nối Với Chúng Tôi</h2>
            <p>Đội ngũ ELibrary luôn sẵn sàng hỗ trợ bạn 24/7 với tinh thần phục vụ tận tâm</p>
        </div>
        <div class="contact-content">
            <div class="contact-info">
                <div class="contact-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <div>
                        <h4>🏢 Trụ Sở Chính</h4>
                        <p>Tầng 15, Tòa nhà Landmark 81<br>
                            208 Nguyễn Hữu Cảnh, Bình Thạnh<br>
                            Thành phố Hồ Chí Minh</p>
                    </div>
                </div>
                <div class="contact-item">
                    <i class="fas fa-phone-volume"></i>
                    <div>
                        <h4>☎️ Hotline Hỗ Trợ</h4>
                        <p>📞 1900-ELIBRARY (354272)<br>
                            📱 (+84) 28-3841-5678<br>
                            <small>Miễn phí cuộc gọi từ 8:00 - 22:00</small>
                        </p>
                    </div>
                </div>
                <div class="contact-item">
                    <i class="fas fa-envelope-open"></i>
                    <div>
                        <h4>✉️ Email Liên Hệ</h4>
                        <p>📧 hotro@elibrary.vn<br>
                            📧 admin@elibrary.vn<br>
                            <small>Phản hồi trong vòng 2 giờ</small>
                        </p>
                    </div>
                </div>
                <div class="contact-item">
                    <i class="fas fa-clock"></i>
                    <div>
                        <h4>⏰ Giờ Phục Vụ</h4>
                        <p>🌅 Thứ 2 - Thứ 6: 7:00 - 21:00<br>
                            🌤️ Thứ 7 - Chủ nhật: 8:00 - 18:00<br>
                            🌙 Hỗ trợ online 24/7</p>
                    </div>
                </div>
            </div>
            <form class="contact-form" id="contactForm">
                <h3 style="margin-bottom: 25px; color: #da251e; text-align: center;">
                    💌 Gửi Tin Nhắn Cho Chúng Tôi
                </h3>
                <div class="form-group">
                    <input type="text" id="name" placeholder="🙋‍♂️ Họ và tên của bạn" required>
                </div>
                <div class="form-group">
                    <input type="email" id="email" placeholder="📧 Địa chỉ email" required>
                </div>
                <div class="form-group">
                    <input type="tel" id="phone" placeholder="📱 Số điện thoại (tùy chọn)">
                </div>
                <div class="form-group">
                    <select id="topic" required
                        style="width: 100%; padding: 15px 20px; border: 2px solid transparent; border-radius: 10px; font-size: 1rem; background: white;">
                        <option value="">🎯 Chọn chủ đề cần hỗ trợ</option>
                        <option value="account">Tài khoản & Đăng ký</option>
                        <option value="borrow">Mượn & Trả sách</option>
                        <option value="technical">Hỗ trợ kỹ thuật</option>
                        <option value="suggestion">Góp ý & Đề xuất</option>
                        <option value="other">Khác</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea id="message" rows="5" placeholder="💬 Nội dung tin nhắn của bạn..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%; justify-content: center;">
                    <i class="fas fa-paper-plane"></i>
                    Gửi Tin Nhắn
                </button>
                <p style="text-align: center; margin-top: 15px; color: #666; font-size: 0.9rem;">
                    🔒 Thông tin của bạn được bảo mật tuyệt đối
                </p>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Form submission handling
        document.getElementById('contactForm').addEventListener('submit', function (e) {
            e.preventDefault();

            // Simple form validation and success message
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const message = document.getElementById('message').value;

            if (name && email && message) {
                alert('🎉 Cảm ơn bạn đã liên hệ! Chúng tôi sẽ phản hồi trong thời gian sớm nhất.');
                this.reset();
            }
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
}
