@{
    ViewData["Title"] = "Test Authentication";
}

<div class="container mt-4">
    <h2>Debug Authentication Status</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Authentication Information</h5>

            <div class="row">
                <div class="col-md-6">
                    <h6>Service Status:</h6>
                    <p><strong>IsAuthenticated:</strong> @ViewBag.IsAuthenticated</p>
                    <p><strong>Token:</strong> @(ViewBag.Token != null ? "Present" : "NULL")</p>
                    <p><strong>UserName:</strong> @ViewBag.UserName</p>
                </div>

                <div class="col-md-6">
                    <h6>Direct Session Check:</h6>
                    <p><strong>Session Token:</strong> @(ViewBag.SessionToken != null ? "Present" : "NULL")</p>
                    <p><strong>Session UserName:</strong> @ViewBag.SessionUserName</p>
                    <p><strong>Session ID:</strong> @ViewBag.SessionId</p>
                </div>
            </div>

            <hr>

            <div class="mt-3">
                <h6>Raw Values (for debugging):</h6>
                <div class="alert alert-info">
                    <small>
                        <strong>Token Value:</strong> @ViewBag.Token<br>
                        <strong>Session Token Value:</strong> @ViewBag.SessionToken
                    </small>
                </div>
            </div>

            <div class="mt-3">
                <a href="/Book/Details/1" class="btn btn-primary">Test Book Details</a>
                <a href="/Auth/Login" class="btn btn-secondary">Go to Login</a>
                <a href="/" class="btn btn-outline-primary">Home</a>
            </div>
        </div>
    </div>
</div>
