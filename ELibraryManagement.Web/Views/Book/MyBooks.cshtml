@model List<ELibraryManagement.Web.Models.UserBorrowedBookViewModel>
@{
    ViewData["Title"] = "Sách đã mượn - Thư viện FPT University";
}

@section Styles {
    <link rel="stylesheet" href="~/css/my-books.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        .fpt-header {
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 50%, #60a5fa 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }

        .fpt-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
            opacity: 0.1;
        }

        .fpt-title {
            position: relative;
            z-index: 1;
        }
    </style>
}

<div class="fpt-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="fpt-title">
                    <h1 class="mb-2">
                        <i class="fas fa-university me-3"></i>
                        Thư viện FPT University
                    </h1>
                    <h2 class="h4 mb-0 opacity-90">
                        <i class="fas fa-book-reader me-2"></i>
                        Quản lý sách đã mượn
                    </h2>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <div class="d-none d-md-block">
                    <i class="fas fa-graduation-cap fa-3x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="my-books-container">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ShowReviewOption"] as bool? == true)
        {
            <div class="alert alert-info alert-dismissible fade show review-prompt shadow-sm" role="alert">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <i class="fas fa-star me-2 text-warning"></i>
                        <strong>Bạn vừa trả sách thành công!</strong>
                        <br>
                        <small>Hãy chia sẻ trải nghiệm của bạn về cuốn sách "@TempData["ReturnedBookTitle"]" để giúp các bạn
                            khác.</small>
                    </div>
                    <div class="ms-3">
                        <a asp-controller="Review" asp-action="Create" asp-route-bookId="@TempData["ReturnedBookId"]"
                            asp-route-borrowRecordId="@TempData["BorrowRecordId"]" class="btn btn-warning btn-sm">
                            <i class="fas fa-star me-1"></i>Viết Đánh Giá
                        </a>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Any())
        {
            <!-- Enhanced Filter Tabs -->
            <div class="filter-tabs mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <ul class="nav nav-pills justify-content-center" id="statusFilter" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="all-tab" data-bs-toggle="pill" data-bs-target="#all"
                                    type="button" role="tab">
                                    <i class="fas fa-list me-2"></i>
                                    Tất cả
                                    <span class="badge bg-light text-dark ms-2">@Model.Count</span>
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="pending-tab" data-bs-toggle="pill" data-bs-target="#pending"
                                    type="button" role="tab">
                                    <i class="fas fa-clock me-2"></i>
                                    Chờ xác nhận
                                    <span class="badge bg-light text-dark ms-2">@Model.Count(b => b.Status == "Requested")</span>
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="borrowed-tab" data-bs-toggle="pill" data-bs-target="#borrowed"
                                    type="button" role="tab">
                                    <i class="fas fa-book-open me-2"></i>
                                    Đang mượn
                                    <span class="badge bg-light text-dark ms-2">@Model.Count(b => b.Status == "Borrowed" && b.ReturnDate == null)</span>
                                </button>
                            </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="returned-tab" data-bs-toggle="pill" data-bs-target="#returned"
                                type="button" role="tab">
                                <i class="fas fa-check-circle me-2"></i>
                                Đã trả
                                <span class="badge bg-light text-dark ms-2">@Model.Count(b => b.Status == "Returned")</span>
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="cancelled-tab" data-bs-toggle="pill" data-bs-target="#cancelled"
                                type="button" role="tab">
                                <i class="fas fa-times-circle me-2"></i>
                                Đã hủy
                                <span class="badge bg-light text-dark ms-2">@Model.Count(b => b.Status == "Cancelled")</span>
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="overdue-tab" data-bs-toggle="pill" data-bs-target="#overdue"
                                type="button" role="tab">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Quá hạn
                                <span class="badge bg-light text-dark ms-2">@Model.Count(b => b.IsOverdue)</span>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

            <!-- Books List -->
            <div class="tab-content" id="statusFilterContent">
                <div class="tab-pane fade show active" id="all" role="tabpanel">
                    @await Html.PartialAsync("_BorrowedBooksList", Model)
                </div>
                <div class="tab-pane fade" id="pending" role="tabpanel">
                    @await Html.PartialAsync("_BorrowedBooksList", Model.Where(b => b.Status == "Requested").ToList())
                </div>
                <div class="tab-pane fade" id="borrowed" role="tabpanel">
                    @await Html.PartialAsync("_BorrowedBooksList", Model.Where(b => b.Status == "Borrowed" && b.ReturnDate == null).ToList())
                </div>
                <div class="tab-pane fade" id="returned" role="tabpanel">
                    @await Html.PartialAsync("_BorrowedBooksList", Model.Where(b => b.Status == "Returned").ToList())
                </div>
                <div class="tab-pane fade" id="cancelled" role="tabpanel">
                    @await Html.PartialAsync("_BorrowedBooksList", Model.Where(b => b.Status == "Cancelled").ToList())
                </div>
                <div class="tab-pane fade" id="overdue" role="tabpanel">
                    @await Html.PartialAsync("_BorrowedBooksList", Model.Where(b => b.IsOverdue).ToList())
                </div>
            </div>
                }
        else
        {
            <!-- Enhanced Empty State -->
            <div class="empty-state">
                <div class="card border-0 shadow-sm text-center">
                    <div class="card-body py-5">
                        <div class="empty-icon mb-4">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <h3 class="text-dark mb-3">Chưa có sách nào được mượn</h3>
                        <p class="text-muted mb-4 lead">
                            Khám phá thư viện FPT University để tìm những cuốn sách thú vị!<br>
                            Hàng ngàn đầu sách đang chờ đón bạn.
                        </p>
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                                <i class="fas fa-search me-2"></i>
                                Khám phá thư viện
                            </a>
                            <a asp-controller="Home" asp-action="Books" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-book me-2"></i>
                                Danh sách sách
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmReturn(borrowRecordId, bookTitle) {
            if (confirm(`Bạn có chắc chắn muốn trả sách "${bookTitle}"?`)) {
                document.getElementById('returnForm_' + borrowRecordId).submit();
            }
        }

        function confirmCancel(borrowRecordId, bookTitle) {
            if (confirm(`Bạn có chắc chắn muốn hủy yêu cầu mượn sách "${bookTitle}"?`)) {
                document.getElementById('cancelForm_' + borrowRecordId).submit();
            }
        }

        function extendBorrow(borrowRecordId, bookTitle) {
            alert("Chức năng gia hạn sách đã bị vô hiệu hóa.");
        }
    </script>
}