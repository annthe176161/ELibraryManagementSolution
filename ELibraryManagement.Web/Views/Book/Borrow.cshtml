    // Handle error notification display - Global function
    function showErrorNotification(message) {
        const errorNotification = document.getElementById('errorNotification');
        const errorMessage = document.getElementById('errorMessage');

        if (errorNotification && errorMessage && message) {
            errorMessage.textContent = message;
            errorNotification.style.display = 'block';

            // Add show class after a small delay for animation
            setTimeout(() => {
                errorNotification.classList.add('show');
            }, 100);

            // Scroll to error notification
            errorNotification.scrollIntoView({
                behavior: 'smooth',
                block: 'center'
            });
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
        // Consolidated handler: prefer server-rendered JSON message, then hidden inputs as fallback
        try {
            var msg = '';
            if (window && window.__serverErrorMessage && window.__serverErrorMessage.toString().trim()) {
                msg = window.__serverErrorMessage.toString().trim();
            }

            if (!msg) {
                const modelStateErrorInput = document.getElementById('modelStateError');
                const tempDataErrorInput = document.getElementById('tempDataError');

                if (modelStateErrorInput && modelStateErrorInput.value && modelStateErrorInput.value.trim()) {
                    msg = modelStateErrorInput.value.trim();
                }

                if (!msg && tempDataErrorInput && tempDataErrorInput.value && tempDataErrorInput.value.trim()) {
                    msg = tempDataErrorInput.value.trim();
                }
            }

            if (msg) {
                showErrorNotification(msg);
            }
        } catch (err) {
            // swallow errors to avoid breaking the page
            console && console.warn && console.warn('Error showing notification', err);
        }
    });
</script>