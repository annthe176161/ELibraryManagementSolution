@model List<ELibraryManagement.Web.Models.UserBorrowedBookViewModel>

@if (Model.Any())
{
    <div class="borrowed-books-list">
        @foreach (var book in Model)
        {
            <div class="borrowed-book-card">
                <div class="row">
                    <div class="col-md-2">
                        <div class="book-cover">
                            @if (!string.IsNullOrEmpty(book.BookCoverUrl))
                            {
                                <img src="@book.BookCoverUrl" alt="@book.BookTitle" class="img-fluid rounded">
                            }
                            else
                            {
                                <div class="book-placeholder">
                                    <i class="fas fa-book fa-2x"></i>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="book-info">
                            <h5 class="book-title">@book.BookTitle</h5>
                            <p class="book-author text-muted">
                                <i class="fas fa-user me-1"></i>
                                @book.BookAuthor
                            </p>

                            <div class="book-meta">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            @if (book.Status == "Requested")
                                            {
                                                <text>Ngày yêu cầu: @book.BorrowDate.ToString("dd/MM/yyyy")</text>
                                            }
                                            else
                                            {
                                                <text>Ngày mượn: @book.BorrowDate.ToString("dd/MM/yyyy")</text>
                                            }
                                        </small>
                                    </div>
                                    <div class="col-sm-6">
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @if (book.Status == "Requested")
                                            {
                                                <text>Trạng thái: Sẵn sàng nhận</text>
                                            }
                                            else if (book.Status == "Borrowed")
                                            {
                                                <text>Hạn trả: @book.DueDate.ToString("dd/MM/yyyy")</text>
                                            }
                                            // Nếu đã trả thì không hiển thị hạn trả
                                        </small>
                                    </div>
                                </div>

                                @if (book.ReturnDate.HasValue)
                                {
                                    <div class="mt-1">
                                        <small class="text-success">
                                            <i class="fas fa-check-circle me-1"></i>
                                            Đã trả: @book.ReturnDate.Value.ToString("dd/MM/yyyy")
                                        </small>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(book.Notes))
                                {
                                    <div class="mt-1">
                                        <small class="text-muted">
                                            <i class="fas fa-sticky-note me-1"></i>
                                            @book.Notes
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="book-status-actions">
                            <!-- Status Badge -->
                            @if (book.Status == "Returned" && book.ReturnDate.HasValue)
                            {
                                <span class="badge bg-success mb-2">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Đã trả
                                </span>
                            }
                            else if (book.Status == "Cancelled")
                            {
                                <span class="badge bg-secondary mb-2">
                                    <i class="fas fa-times-circle me-1"></i>
                                    Đã hủy
                                </span>
                            }
                            else if (book.Status == "Requested")
                            {
                                <span class="badge bg-success mb-2">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Đã đăng ký
                                </span>
                            }
                            else if (book.IsOverdue)
                            {
                                <span class="badge bg-danger mb-2">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Quá hạn @book.DaysOverdue ngày
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-primary mb-2">
                                    <i class="fas fa-hand-holding me-1"></i>
                                    Đang mượn
                                </span>
                            }

                            @if (book.Status == "Requested")
                            {
                                <div class="alert alert-light border-success p-2 mt-2 mb-2" style="font-size: 0.8rem; background-color: #e8f5e8; border-color: #4caf50;">
                                    <i class="fas fa-check-circle text-success me-1"></i>
                                    <strong>Đến thư viện</strong> để nhận sách
                                </div>
                            }

                            <!-- Actions -->
                            <div class="actions">
                                <a asp-controller="Book" asp-action="BorrowedDetails"
                                    asp-route-borrowRecordId="@book.BorrowRecordId"
                                    class="btn btn-outline-primary btn-sm mb-1 w-100">
                                    <i class="fas fa-eye me-1"></i>
                                    Xem chi tiết
                                </a>

                                @if (!book.ReturnDate.HasValue && book.Status != "Cancelled")
                                {
                                    @if (book.Status == "Requested")
                                    {
                                        <!-- Cancel Request button for Requested status -->
                                        <form id="cancelForm_@book.BorrowRecordId" asp-controller="Book" asp-action="Cancel"
                                            asp-route-id="@book.BorrowRecordId" method="post" class="d-inline w-100">
                                            <button type="button" class="btn btn-outline-danger btn-sm w-100"
                                                onclick="confirmCancel(@book.BorrowRecordId, '@book.BookTitle')">
                                                <i class="fas fa-times me-1"></i>
                                                Hủy yêu cầu
                                            </button>
                                        </form>
                                    }
                                    else if (book.Status == "Borrowed")
                                    {
                                        <!-- Note: Students cannot return books directly -->
                                        <div class="alert alert-info p-2 mt-1" style="font-size: 0.8rem;">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Liên hệ thủ thư để trả sách
                                        </div>
                                    }
                                }
                                else if (book.Status == "Returned")
                                {
                                    <!-- Review button for returned books -->
                                    <a asp-controller="Review" asp-action="Create" asp-route-bookId="@book.BookId"
                                        asp-route-borrowRecordId="@book.BorrowRecordId" class="btn btn-warning btn-sm w-100 mb-1">
                                        <i class="fas fa-star me-1"></i>
                                        Đánh giá sách
                                    </a>

                                    <!-- Link to view all reviews for this book -->
                                    <a asp-controller="Review" asp-action="BookReviews" asp-route-bookId="@book.BookId"
                                        class="btn btn-outline-secondary btn-sm w-100">
                                        <i class="fas fa-comments me-1"></i>
                                        Xem đánh giá
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-4">
        <i class="fas fa-book fa-3x text-muted mb-3"></i>
        <p class="text-muted">Không có sách nào trong danh mục này</p>
    </div>
}