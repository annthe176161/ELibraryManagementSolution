@{
    ViewData["Title"] = "Debug API Books";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h2>Debug API Books Response</h2>
    
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>API Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>API URL:</strong> @ViewBag.ApiUrl</p>
                    <p><strong>Response Status:</strong> @ViewBag.ResponseStatus</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Raw API Response</h5>
                </div>
                <div class="card-body">
                    <pre style="max-height: 500px; overflow-y: auto; background: #f8f9fa; padding: 15px;">@ViewBag.RawResponse</pre>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-12">
            <a href="@Url.Action("Books", "Admin")" class="btn btn-primary">‚Üê Back to Books Management</a>
        </div>
    </div>
</div>