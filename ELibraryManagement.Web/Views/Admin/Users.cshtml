@model List<AdminUserViewModel>

@{
    ViewData["Title"] = "Quản lý người dùng - E-Library";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h2 class="h3 mb-0">
                    <i class="fas fa-users me-2 text-primary"></i>
                    Quản lý người dùng
                </h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index">Quản trị</a>
                            </li>
                            <li class="breadcrumb-item active">Người dùng</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <button type="button" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        Thêm người dùng
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Row -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="small">Tổng người dùng</div>
                            <div class="h4 mb-0">@Model.Count</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="small">Admin</div>
                            <div class="h4 mb-0">@Model.Count(u => u.Roles.Contains("Admin"))</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-shield fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="small">Thủ thư</div>
                            <div class="h4 mb-0">@Model.Count(u => u.Roles.Contains("Librarian"))</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-tie fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="small">Người dùng thường</div>
                            <div class="h4 mb-0">@Model.Count(u => u.Roles.Contains("User") && !u.Roles.Contains("Admin") && !u.Roles.Contains("Librarian"))</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">Danh sách người dùng</h5>
                        <div class="d-flex">
                            <div class="input-group input-group-sm me-3" style="width: 300px;">
                                <input type="text" class="form-control" placeholder="Tìm kiếm người dùng..." id="searchInput">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                            <select class="form-select form-select-sm" id="roleFilter" style="width: 150px;">
                                <option value="">Tất cả vai trò</option>
                                <option value="Admin">Admin</option>
                                <option value="Librarian">Thủ thư</option>
                                <option value="User">Người dùng</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="usersTable">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Tên đăng nhập</th>
                                    <th scope="col">Họ tên</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Mã sinh viên</th>
                                    <th scope="col">Vai trò</th>
                                    <th scope="col">Ngày tạo</th>
                                    <th scope="col">Hoạt động</th>
                                    <th scope="col">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar avatar-sm me-2">
                                                    <i class="fas fa-user-circle fa-2x text-muted"></i>
                                                </div>
                                                <div>
                                                    <strong>@user.UserName</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(user.StudentId))
                                            {
                                                <span class="badge bg-light text-dark">@user.StudentId</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                        <td>
                                            @foreach (var role in user.Roles)
                                            {
                                                var badgeClass = role switch
                                                {
                                                    "Admin" => "bg-danger",
                                                    "Librarian" => "bg-info",
                                                    "User" => "bg-secondary",
                                                    _ => "bg-secondary"
                                                };
                                                <span class="badge @badgeClass me-1">@role</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                @user.CreatedAt.ToString("dd/MM/yyyy")
                                            </small>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <small><strong>Đang mượn:</strong> @user.ActiveBorrows sách</small>
                                                <small><strong>Tổng mượn:</strong> @user.TotalBorrows lần</small>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                                        <i class="fas fa-cog"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="#"><i class="fas fa-user-tag me-2"></i>Thay đổi vai trò</a></li>
                                                        <li><a class="dropdown-item" href="#"><i class="fas fa-lock me-2"></i>Đặt lại mật khẩu</a></li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-ban me-2"></i>Vô hiệu hóa</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            Hiển thị @Model.Count người dùng
                        </small>
                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item disabled">
                                    <span class="page-link">Trước</span>
                                </li>
                                <li class="page-item active">
                                    <span class="page-link">1</span>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">Sau</span>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $('#searchInput').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#usersTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });

            // Role filter
            $('#roleFilter').on('change', function() {
                var value = $(this).val();
                $('#usersTable tbody tr').filter(function() {
                    if (value === '') {
                        $(this).show();
                    } else {
                        $(this).toggle($(this).find('.badge').text().indexOf(value) > -1);
                    }
                });
            });
        });
    </script>
}