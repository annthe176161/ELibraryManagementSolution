@model UserDetailWithBorrowsViewModel

@if (Model?.User != null)
{
    <div class="row">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        Thông tin cá nhân
                    </h6>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td class="fw-bold" style="width: 40%;">Họ tên:</td>
                                <td>@Model.User.FullName</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Tên đăng nhập:</td>
                                <td>@Model.User.UserName</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Email:</td>
                                <td>@Model.User.Email</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Mã sinh viên:</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.User.StudentId))
                                    {
                                        <span class="badge bg-primary">@Model.User.StudentId</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Số điện thoại:</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.User.PhoneNumber))
                                    {
                                        @Model.User.PhoneNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Địa chỉ:</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.User.Address))
                                    {
                                        @Model.User.Address
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Ngày sinh:</td>
                                <td>
                                    @if (Model.User.DateOfBirth.HasValue)
                                    {
                                        @Model.User.DateOfBirth.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Thống kê hoạt động
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <div>
                                    <i class="fas fa-calendar-plus text-primary me-2"></i>
                                    <strong>Ngày tham gia:</strong>
                                </div>
                                <span class="badge bg-primary">@Model.User.CreatedAt.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <div>
                                    <i class="fas fa-book-open text-info me-2"></i>
                                    <strong>Đang mượn:</strong>
                                </div>
                                <span class="badge bg-info">@Model.User.ActiveBorrows sách</span>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <div>
                                    <i class="fas fa-history text-secondary me-2"></i>
                                    <strong>Tổng đã mượn:</strong>
                                </div>
                                <span class="badge bg-secondary">@Model.User.TotalBorrows lần</span>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                <div>
                                    <i class="fas fa-user-check text-success me-2"></i>
                                    <strong>Trạng thái:</strong>
                                </div>
                                @if (Model.User.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i>Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-ban me-1"></i>Bị vô hiệu
                                    </span>
                                }
                            </div>
                        </div>
                        
                        @if (Model.User.LastLoginDate.HasValue)
                        {
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                                    <div>
                                        <i class="fas fa-sign-in-alt text-warning me-2"></i>
                                        <strong>Lần cuối đăng nhập:</strong>
                                    </div>
                                    <span class="badge bg-warning">@Model.User.LastLoginDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Borrowed Books Section -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-book me-2"></i>
                        Lịch sử mượn sách (@Model.BorrowedBooks.Count)
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model?.BorrowedBooks?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Sách</th>
                                        <th>Ngày yêu cầu/Ngày mượn</th>
                                        <th>Hạn trả</th>
                                        <th>Ngày trả</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var borrow in Model.BorrowedBooks.Take(10))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(borrow.BookCoverUrl))
                                                    {
                                                        <img src="@borrow.BookCoverUrl" alt="@borrow.BookTitle" 
                                                             class="me-2 rounded" style="width: 40px; height: 60px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <div class="fw-bold">@borrow.BookTitle</div>
                                                        <small class="text-muted">@borrow.BookAuthor</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (borrow.Status == "Requested")
                                                {
                                                    <div>
                                                        <small class="text-primary fw-bold">Ngày yêu cầu:</small><br>
                                                        <small>@borrow.BorrowDate.ToString("dd/MM/yyyy")</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div>
                                                        <small class="text-success fw-bold">Ngày mượn:</small><br>
                                                        <small>@(borrow.ConfirmedDate.HasValue ? borrow.ConfirmedDate.Value.ToString("dd/MM/yyyy") : borrow.BorrowDate.ToString("dd/MM/yyyy"))</small>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <small>@borrow.DueDate.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td>
                                                @if (borrow.ReturnDate.HasValue)
                                                {
                                                    <small>@borrow.ReturnDate.Value.ToString("dd/MM/yyyy")</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (borrow.ReturnDate.HasValue)
                                                {
                                                    <span class="badge bg-success">Đã trả</span>
                                                }
                                                else if (borrow.Status == "Requested")
                                                {
                                                    <span class="badge bg-info">Đã đăng ký</span>
                                                }
                                                else if (borrow.Status == "Borrowed")
                                                {
                                                    if (borrow.IsOverdue)
                                                    {
                                                        <span class="badge bg-danger">Quá hạn</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">Đang mượn</span>
                                                    }
                                                }
                                                else if (borrow.Status == "Cancelled")
                                                {
                                                    <span class="badge bg-secondary">Đã hủy</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-dark">@borrow.Status</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        @if (Model.BorrowedBooks.Count > 10)
                        {
                            <div class="text-center mt-3">
                                <small class="text-muted">Hiển thị 10 / @Model.BorrowedBooks.Count bản ghi. Xem tất cả tại trang lịch sử mượn sách.</small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-book text-muted fa-3x mb-3"></i>
                            <p class="text-muted">Sinh viên chưa mượn sách nào.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-tasks me-2"></i>
                        Thao tác nhanh
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        @if (Model?.User?.IsActive == true)
                        {
                            <button type="button" class="btn btn-outline-warning" onclick="disableUser('@Model?.User?.Id', '@Model?.User?.FullName')">
                                <i class="fas fa-ban me-1"></i>
                                Vô hiệu hóa tài khoản
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-success" onclick="enableUser('@Model?.User?.Id', '@Model?.User?.FullName')">
                                <i class="fas fa-check me-1"></i>
                                Kích hoạt tài khoản
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Không thể tải thông tin sinh viên. Vui lòng thử lại.
    </div>
}