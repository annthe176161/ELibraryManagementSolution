@{
    ViewData["Title"] = "Xác nhận Email";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    @if (ViewBag.Success == true)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle fa-3x mb-3"></i>
                            <h3>Xác nhận thành công!</h3>
                            <p>@ViewBag.Message</p>
                            <a href="@Url.Action("Login", "Accounts")" class="btn btn-primary">Đăng nhập ngay</a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle fa-3x mb-3"></i>
                            <h3>Xác nhận thất bại!</h3>
                            <p>@ViewBag.Message</p>
                            <a href="@Url.Action("ResendEmailConfirmation", "Accounts")" class="btn btn-warning">Gửi lại
                                email xác nhận</a>
                            <a href="@Url.Action("Register", "Accounts")" class="btn btn-secondary ml-2">Đăng ký lại</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>