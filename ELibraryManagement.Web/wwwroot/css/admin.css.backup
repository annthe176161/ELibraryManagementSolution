.enhanced-stat-card h4, .enhanced-stat-card h5, .enhanced-stat-card h6,
.analytics-card h1, .analytics-card h2, .analytics-card h3, 
.analytics-card h4, .analytics-card h5, .analytics-card h6,
.activity-card h1, .activity-card h2, .activity-card h3, 
.activity-card h4, .activity-card h5, .activity-card h6,
.quick-actions-card h1, .quick-actions-card h2, .quick-actions-card h3, 
.quick-actions-card h4, .quick-actions-card h5, .quick-actions-card h6,
.quick-access-card h1, .quick-access-card h2, .quick-access-card h3, 
.quick-access-card h4, .quick-access-card h5, .quick-access-card h6 {
    color: #2c3e50 !important;
}

/* System status text colors */
.system-status-mini h6 {
    color: #495057 !important;
}

/* Quick stat labels */
.quick-stat-label {
    color: #495057 !important;
    font-weight: 500;
}

/* Page header enhanced colors */
.page-title-enhanced {
    color: #2c3e50 !important;
}

.page-subtitle-enhanced {
    color: #6c757d !important;
}

/* Count-up animation color fix */
.stat-number[data-count] {
    color: #2c3e50 !important;
}

/* Badge and status colors */
.admin-badge span {
    color: white !important;
}

.last-updated span {
    color: #6c757d !important;
}

.system-status .badge {
    color: white !important;
}

