/* Borrow Status Statistics Cards */
.borrow-stat-card {
    background: white;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
    border: 1px solid #e9ecef;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 15px;
    position: relative;
    overflow: hidden;
}

.borrow-stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: #007bff;
}

.borrow-stat-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.borrow-stat-card.stat-requested::before {
    background: #ffc107;
}

.borrow-stat-card.stat-borrowed::before {
    background: #28a745;
}

.borrow-stat-card.stat-returned::before {
    background: #17a2b8;
}

.borrow-stat-card.stat-overdue::before {
    background: #dc3545;
}

.borrow-stat-card .stat-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    color: white;
    flex-shrink: 0;
}

.borrow-stat-card.stat-requested .stat-icon {
    background: #ffc107;
}

.borrow-stat-card.stat-borrowed .stat-icon {
    background: #28a745;
}

.borrow-stat-card.stat-returned .stat-icon {
    background: #17a2b8;
}

.borrow-stat-card.stat-overdue .stat-icon {
    background: #dc3545;
}

.borrow-stat-card .stat-content {
    flex: 1;
}

.borrow-stat-card .stat-number {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 5px;
    color: #2d3748;
}

.borrow-stat-card .stat-label {
    font-size: 0.9rem;
    color: #718096;
    margin-bottom: 5px;
    font-weight: 500;
}

.borrow-stat-card .stat-percentage {
    font-size: 0.8rem;
    color: #a0aec0;
    font-weight: 600;
}